{
	"$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
	"files": {
		"include": [
			"optuna_dashboard_client/src/**/*.ts",
			"optuna_dashboard_client/src/**/*.tsx",
			"optuna_dashboard_client/tests/**/*.ts",
			"optuna_dashboard_client/tests/**/*.tsx",
			"standalone_app/src/**/*.ts",
			"standalone_app/src/**/*.tsx",
			"vscode/src/**/*.ts",
			"vscode/src/**/*.tsx"
		],
		"ignore": [
			"optuna_dashboard_client/src/components/PlotlyColorTemplates.ts",
			"standalone_app/src/PlotlyDarkMode.ts"
		]
	},
	"javascript": {
		"formatter": {
			"trailingComma": "es5",
			"indentWidth": 2,
			"indentStyle": "space",
			"semicolons": "asNeeded",
			"quoteStyle": "double"
		}
	}
}
